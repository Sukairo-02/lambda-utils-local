---
import Layout from '../layouts/Layout.astro';
import Instructions from '../components/postman/instructions.svelte';
import Converter from '../components/converter/converter.svelte';
---

<Layout title="Lambda Utils.">
    <section>
        <h1>Lambda Utils</h1>
        <h2>Image cropper</h2>
        <!-- <Converter client:load /> -->
        <hr style={{ width: '100%', marginTop: '10px' }} />
        <Instructions client:load />

        <style>
            section {
                margin: 0;
                padding: 10px 20px;
                width: 100%;
                max-width: 1400px;
                height: 100%;
                display: flex;
                flex-direction: column;
                align-items: left;
                justify-content: center;
            }

            h1 {
                font-size: 4rem;
                font-weight: 700;
                line-height: 1;
                text-align: center;
                margin-bottom: 1em;
                align-self: left;
            }

            h2 {
                font-size: 2rem;
                font-weight: 500;
                line-height: 1;
                text-align: left;
                margin-bottom: 0.5em;
            }

            h3 {
                font-size: 1.5rem;
                font-weight: 500;
                line-height: 1;
                text-align: center;
                margin: 0;
            }

            .p {
                font-size: 1rem;
                font-weight: 400;
                line-height: 1;
                text-align: left;
                margin-bottom: 0.5em;
            }

            .text-container {
                border: 1px solid lightgray;
                background-color: lightgray;
                border-radius: 3px;
            }

            .code {
                font-size: 1rem;
                font-weight: 400;
                line-height: 1;
                text-align: left;
                margin: 0;
            }

            li {
                margin: 10px 0;
            }

            @media (max-width: 600px) {
                pre code {
                    font-size: 0.5rem;
                }
                .code {
                    font-size: 0.5rem;
                }
            }
        </style>
    </section>
</Layout>
